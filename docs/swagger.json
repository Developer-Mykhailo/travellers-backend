{
  "openapi": "3.1.0",
  "info": {
    "version": "1.0.0",
    "title": "Students app",
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "description": "This is a documentation of students app"
  },
  "servers": [
    {
      "url": "http://localhost:3001"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "tags": [
    {
      "name": "Users",
      "description": "Operations about users."
    },
    {
      "name": "Auth",
      "description": "Auth operations."
    }
  ],
  "paths": {
    "/api/users": {
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Get all users",
        "operationId": "getUsers",
        "description": "Public endpoint to get list of users with pagination, sorting and filtering",
        "security": [],
        "parameters": [
          {
            "in": "query",
            "name": "page",
            "schema": {
              "type": "integer",
              "example": 1
            }
          },
          {
            "in": "query",
            "name": "perPage",
            "schema": {
              "type": "integer",
              "example": 10
            }
          },
          {
            "in": "query",
            "name": "sortBy",
            "schema": {
              "type": "string",
              "enum": [
                "name",
                "publicStories"
              ]
            }
          },
          {
            "in": "query",
            "name": "sortOrder",
            "schema": {
              "type": "string",
              "enum": [
                "asc",
                "desc"
              ]
            }
          },
          {
            "in": "query",
            "name": "name",
            "description": "You can put in several",
            "schema": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "example": [
                "Романенко",
                "Mykhailo"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Users successfully found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "integer"
                    },
                    "message": {
                      "type": "string"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "data": {
                          "type": "array",
                          "items": {
                            "type": "object"
                          }
                        },
                        "page": {
                          "type": "integer"
                        },
                        "perPage": {
                          "type": "integer"
                        },
                        "totalItems": {
                          "type": "integer"
                        },
                        "totalPages": {
                          "type": "integer"
                        },
                        "hasNextPage": {
                          "type": "boolean"
                        },
                        "hasPreviousPage": {
                          "type": "boolean"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Route not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "description": "Response message indicating the error.",
                      "type": "string",
                      "example": "NotFoundError"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/users/profile/{id}": {
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Get private user profile",
        "operationId": "getPrivateUserProfile",
        "description": "Get full user profile including saved and public stories",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User successfully found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "User successfully found!"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "_id": {
                          "type": "string",
                          "example": "694a88bbcbc8579663486147"
                        },
                        "name": {
                          "type": "string",
                          "example": "User Name"
                        },
                        "email": {
                          "type": "string",
                          "example": "user.email@gmail.com"
                        },
                        "description": {
                          "type": "string",
                          "example": "Hello everyone, I am happy to share my stories."
                        },
                        "savedStories": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          },
                          "example": [
                            "694a8c750cbe696229c7bb24",
                            "694b2b4039f9981db9f960d2"
                          ]
                        },
                        "publicStories": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          },
                          "example": [
                            "694a8c750cbe696229c7bb24",
                            "694b2b4039f9981db9f960d2"
                          ]
                        },
                        "createdAt": {
                          "type": "string",
                          "format": "date-time",
                          "example": "2025-12-23T12:19:07.587Z"
                        },
                        "updatedAt": {
                          "type": "string",
                          "format": "date-time",
                          "example": "2025-12-23T23:52:32.365Z"
                        },
                        "avatar": {
                          "type": "object",
                          "properties": {
                            "url": {
                              "type": "string",
                              "format": "uri",
                              "example": "https://res.cloudinary.com/demo/image/upload/w_100,h_100,c_thumb,g_face,r_20,d_avatar.png/non_existing_id.png"
                            },
                            "publicId": {
                              "type": "string",
                              "example": "travellers-backend/avatars/1766493124483_195615627_yfgkmc"
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          }
        }
      }
    },
    "/api/users/public/{id}": {
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Get public user profile",
        "operationId": "getPublicUserProfile",
        "description": "Get user profile by ID",
        "security": [],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User successfully found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "User successfully found!"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string",
                          "example": "User Name"
                        },
                        "avatar": {
                          "type": "object",
                          "properties": {
                            "url": {
                              "type": "string",
                              "format": "uri",
                              "example": "https://res.cloudinary.com/demo/image/upload/w_100,h_100,c_thumb,g_face,r_20,d_avatar.png/non_existing_id.png"
                            },
                            "publicId": {
                              "type": "string",
                              "example": "travellers-backend/avatars/1766493124483_195615627_yfgkmc"
                            }
                          }
                        },
                        "description": {
                          "type": "string",
                          "example": "Hello everyone, I am happy to share my stories."
                        },
                        "publicStories": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          },
                          "example": [
                            "694a8c750cbe696229c7bb24",
                            "694b2b4039f9981db9f960d2"
                          ]
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          }
        }
      }
    },
    "/api/users/toggle-save-story/{id}": {
      "patch": {
        "tags": [
          "Users"
        ],
        "summary": "Save / Unsave story",
        "operationId": "save/unsaveStory",
        "description": "Save or unsave a story to a collection by ID",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Story id"
          }
        ],
        "responses": {
          "200": {
            "description": "Save / Unsave Story",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Story 68498236a100312bea079029 was successfully added / deleted"
                    },
                    "data": {
                      "type": "object",
                      "required": [
                        "saved"
                      ],
                      "properties": {
                        "saved": {
                          "type": "string",
                          "example": "true / false"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          }
        }
      }
    },
    "/api/users/upload-avatar": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "Upload user avatar",
        "operationId": "uploadUserAvatar",
        "description": "Upload user avatar using multipart/form-data",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": [
                  "avatar"
                ],
                "properties": {
                  "avatar": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Avatar successfully uploaded",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 201
                    },
                    "message": {
                      "type": "string",
                      "example": "Avatar successfully uploaded!"
                    },
                    "data": {
                      "type": "object",
                      "required": [
                        "url"
                      ],
                      "properties": {
                        "url": {
                          "type": "string",
                          "format": "uri",
                          "example": "https://res.cloudinary.com/demo/image/upload/w_100,h_100,c_thumb,g_face,r_20,d_avatar.png/non_existing_id.png"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "responses": {
      "Unauthorized": {
        "description": "Unauthorized",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "integer"
                },
                "message": {
                  "type": "string",
                  "description": "Error definition"
                },
                "data": {
                  "type": "object",
                  "description": "list of possible errors",
                  "properties": {
                    "message": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            },
            "example": {
              "status": 401,
              "message": "UnauthorizedError",
              "data": {
                "message": [
                  "Session not found",
                  "Access token expired"
                ]
              }
            }
          }
        }
      },
      "NotFound": {
        "description": "Resource not Found",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 404
                },
                "message": {
                  "type": "string"
                },
                "data": {
                  "type": "object",
                  "description": "list of possible errors",
                  "properties": {
                    "message": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            },
            "example": {
              "status": 404,
              "message": "NotFoundError",
              "data": {
                "message": [
                  "Route not found",
                  "User not found",
                  "Story not found"
                ]
              }
            }
          }
        }
      },
      "InternalServerError": {
        "description": "Internal server error",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "integer"
                },
                "message": {
                  "type": "string",
                  "description": "General error message"
                },
                "data": {
                  "type": "string",
                  "description": "Error details"
                }
              }
            },
            "example": {
              "status": 500,
              "message": "Something went wrong",
              "data": "Unexpected field"
            }
          }
        }
      }
    }
  }
}