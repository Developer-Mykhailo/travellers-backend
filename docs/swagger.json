                        "createdAt": {
                          "type": "string",
                          "format": "date-time",
                          "example": "2025-12-23T12:35:01.557Z"
                        },
                        "updatedAt": {
                          "type": "string",
                          "format": "date-time",
                          "example": "2025-12-27T05:41:43.149Z"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          }
        }
      }
    },
    "/api/users": {
